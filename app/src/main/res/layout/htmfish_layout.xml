<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_gui_layout">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#66bfcd">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <edu.up.cs301.animation.AnimationSurface
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewBoard"
                android:background="#FF66BFCD" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="QUIT"
                android:id="@+id/quitButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="RESTART GAME"
                android:id="@+id/restartButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="YOU"
                android:id="@+id/viewPlayer1"
                android:textColor="#FFFF0000"
                android:layout_weight="1"
                android:autoText="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score: 12 Fish"
                android:id="@+id/viewYourScore"
                android:textColor="#FFFF0000"
                android:layout_weight="3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Your Turn!"
                android:id="@+id/textYourTurn"
                android:layout_weight="3"
                android:textColor="#FFFF0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PLAYER 2"
                android:id="@+id/viewPlayer2"
                android:textColor="#FF0000FF"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score: 7 Fish"
                android:id="@+id/viewScore2"
                android:layout_weight="3"
                android:textColor="#FF0000FF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Player 2&apos;s Turn!"
                android:id="@+id/textPlayerTurn"
                android:layout_weight="3"
                android:textColor="#FF66bfcd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text=""
                android:id="@+id/textElement"
                android:layout_weight="2"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>